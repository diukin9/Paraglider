<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Paraglider.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Paraglider.MobileApp.Pages"
    xmlns:pages="clr-namespace:Paraglider.MobileApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar Route="LoadingPage">
        <ShellContent ContentTemplate="{DataTemplate pages:LoadingPage}" />
    </TabBar>

    <TabBar Route="ForgotPasswordPage">
        <ShellContent ContentTemplate="{DataTemplate pages:ForgotPasswordPage}" />
    </TabBar>

    <TabBar Route="IntroPage">
        <ShellContent ContentTemplate="{DataTemplate pages:IntroPage}" />
    </TabBar>

    <TabBar Route="LoginPage">
        <ShellContent ContentTemplate="{DataTemplate pages:LoginPage}" />
    </TabBar>

    <TabBar Route="RegistrationPage">
        <ShellContent ContentTemplate="{DataTemplate pages:RegistrationPage}" />
    </TabBar>

    <TabBar Route="MainPage">
        <ShellContent Icon="home_icon.svg" ContentTemplate="{DataTemplate local:HomePage}" />
        <ShellContent Icon="catalog_icon.svg" ContentTemplate="{DataTemplate local:CatalogPage}" />
        <ShellContent Icon="plan_icon.svg" ContentTemplate="{DataTemplate local:PlanningPage}" />
    </TabBar>

</Shell>
